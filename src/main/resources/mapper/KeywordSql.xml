<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.KeywordMapper">
    <select id="getTopTen" resultType="KeywordDto">
        select * from keyword limit 10
    </select>

    <insert id="insertKeyword" parameterType="KeywordDto">
        insert into keyword(word_num, word, word_count) values (null, #{word}, #{word_count})
    </insert>
    <update id="updateKeyword" parameterType="KeywordDto">
        update keyword set word_count=#{word_count}+1 where word = #{word}
    </update>
</mapper>